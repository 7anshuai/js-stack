{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "compat",
    "flowtype",
    "import",
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "compat/compat": 2
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
